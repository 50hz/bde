#!/usr/bin/env python
# encoding: utf-8

from waflib import Logs, Utils
from waflib.Configure import ConfigurationContext
import sys

top = '.'
out = 'build'

def options(opt):
    opt.load('compiler_c')

def configure(conf):
    conf.load('compiler_c')

decnumSources = '\
decContext.c \
decDouble.c \
decQuad.c \
decSingle.c \
decNumber.c \
decimal128.c \
decimal64.c \
decimal32.c \
'

def build(bld):
    cflags = []
    if "BDE_THIRD_PARTY_CFLAGS" in bld.env:
        cflags = bld.env["THIRD_PARTY_CFLAGS"]

    if sys.byteorder == 'big':
        cflags+= ["-DDECLITEND=0"]
    else:
        assert(sys.byteorder == 'little')
        cflags+= ["-DDECLITEND=1"]

    bld.stlib(source=decnumSources,
              target='decNumber',
              export_includes='.',
              name='third-party/decNumber_lib',
              cflags=cflags)

